Bootstrap:docker
From: fedora:36

%post
dnf update -y
dnf install -y https://mirrors.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm
dnf install -y poppler-utils ImageMagick file ffmpeg git python3 python3-pyyaml
cd /
git clone https://github.com/IUMDPI/MediaProbe.git
dnf erase -y git
dnf clean all

%runscript
/MediaProbe/media_probe.py "$@"

